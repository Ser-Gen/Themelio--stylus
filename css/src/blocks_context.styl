.Page__content {
	font-size: 2em;
	margin: auto;
	width: 650px;
}


.BtnDefault {
	background-color: #ececec;
	background-image: linear-gradient(#f8f8f8,#e1e1e1);
	border-radius: 4px;
	border: 1px solid #aaa;
	box-shadow: inset 0 1px 0 rgba(255,255,255,.75),0 1px 2px rgba(0,0,0,.3);
	color: #575453;
	padding: 6px 8px;
	text-shadow: 0 1px 0 rgba(255,255,255,.75);
	
	&:hover {
		background-color: #f5f5f5;
		background-image: linear-gradient(#fff,#ededed);
		color: #000;
	}
	&:active {
		background-color: #c4c4c4;
		background-image: linear-gradient(#b3b3b3,#dbdbdb);
		box-shadow: inset 0 3px 5px rgba(0,0,0,.15);
		color: #686564;
	}
}


.ActionList {
	@extend .List;
}
.ActionList__item {
	@extend .List__item;
}

.Action__btn {
	@extend .BtnDefault;
}


.Example__bubble {
	@extend .Bubble.onHover;
	@extend .Bubble.top;
	@extend .noUserSelect;
	cursor: default;
}
.Example__bubble .Bubble__trigger {
	border-bottom: .1em dotted;
}
.Example__bubble .Bubble__content {
	padding: .5em;
}


.Counter {
	@extend .List.ib;
	@extend .List.ib.separated;
	cursor: default;
	margin-bottom: lineHeight;
}

.FieldFile__trigger {
	@extend .BtnDefault;
}
