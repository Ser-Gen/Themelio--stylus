.Tab__wrapper {
  border-bottom: 1px solid #dadada;
  width: 100%;
}

.Tab__list {
  @extend .List;
  margin-left: 1em;
  margin-bottom: -1px;
}

.Tab {
  @extend .noUserSelect;
  @extend .List__item;
  border: 1px solid transparent;
  cursor: pointer;
  display: inline-block;
  padding: .55em;
  vertical-align: top;
}
.Tab--active {
  background-color: #fff;
  border-color: #dadada;
  border-bottom-color: #fff;
  box-shadow: inset 0 .55em .55em -.55em rgba(0,0,0,.1);
  color: #000;
  cursor: default;
  font-weight: bold;
}

.Tab__text {
  border-bottom: .1em dotted;
  color: linkColor;
  font-weight: bold;
}
.Tab--active .Tab__text {
  border-bottom: 0;
  color: #000;
}
.Tab__info {
  color: #777;
}

.Tab:hover .Tab__text {
  color: linkHoverColor;
}
.Tab--active:hover .Tab__text {
  color: #000;
}