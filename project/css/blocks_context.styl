.Page__content {
	font-size: 2em;
	margin: auto;
	width: 650px;
}


btnDefault-bdrad = 4px

.Btn--default {
	background-color: #ececec;
	background-image: linear-gradient(#f8f8f8,#e1e1e1);
	border-radius: btnDefault-bdrad;
	border: 1px solid #aaa;
	box-shadow: inset 0 1px 0 rgba(255,255,255,.75),0 1px 2px rgba(0,0,0,.3);
	color: #575453;
	cursor: pointer;
	padding: 6px 8px;
	text-shadow: 0 1px 0 rgba(255,255,255,.75);
	
	&:hover,
	&.hover {
		background-color: #f5f5f5;
		background-image: linear-gradient(#fff,#ededed);
		color: #000;
	}
	&:active,
	&.active {
		background-color: #c4c4c4;
		background-image: linear-gradient(#b3b3b3,#dbdbdb);
		box-shadow: inset 0 3px 5px rgba(0,0,0,.15);
		color: #686564;
		cursor: default;
	}
}


.Btn--group {
	border-radius: 0;
	
	& + .Btn--group {
		border-left: 0;
	}

	&:first-child {
		border-top-left-radius: btnDefault-bdrad;
		border-bottom-left-radius: btnDefault-bdrad;
	}

	&:last-child {
		border-top-right-radius: btnDefault-bdrad;
		border-bottom-right-radius: btnDefault-bdrad;
	}
}


.ActionList {
	@extend .List;
}
.ActionList__item {
	@extend .List__item;
}

.Action__btn {
	@extend .Btn--default;
}


.Example__bubble {
	@extend .Bubble.onHover;
	@extend .Bubble.top;
	@extend .noUserSelect;
	cursor: default;
}
.Example__bubble .Bubble__trigger {
	border-bottom: .1em dotted;
}
.Example__bubble .Bubble__content {
	padding: .5em;
}


.Counter {
	@extend .List.ib;
	@extend .List.ib.separated;
	cursor: default;
	margin-bottom: lineHeight;
}

.FieldFile__trigger {
	@extend .Btn--default;
}

.Test {
	position: relative;
	
	&:before,
	&:after {
		border-width: 10px;
		border-style: solid;
		border-color: transparent transparent transparent red;
		content: "";
		left: 100%;
		position: absolute;
		top: 0;
	}
	&:before {
		border-left-color: #fff;
		margin-left: -1px;
		z-index: 1;
	}
}



.Header {
	font-weight: bold;
		
	&--main {
		font-family: 'Segoe UI', sans-serif;
	}
	&--type-error {
		color: red;
	}
	&--main&--type-error {
		font-size: 1.2em;
	}
}

Header(mods) {
	@extend .Header;
	if (match('main', mods)) {
		@extend .Header--main;
	}
	if (match('error', mods)) {
		@extend .Header--type-error;
	}
	if (match('main', mods) && match('error', mods)) {
		@extend .Header--main.Header--type-error;
	}
}


.Error__header {
	Header('main error');
}
