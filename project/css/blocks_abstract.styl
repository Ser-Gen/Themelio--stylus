btnDefault-bdrad = 4px

.Btn--default {
	background-color: #ececec;
	background-image: linear-gradient(#f8f8f8,#e1e1e1);
	border-radius: btnDefault-bdrad;
	border: 1px solid #aaa;
	box-shadow: inset 0 1px 0 rgba(255,255,255,.75),0 1px 2px rgba(0,0,0,.3);
	color: #575453;
	cursor: pointer;
	padding: 6px 8px;
	text-shadow: 0 1px 0 rgba(255,255,255,.75);
	
	&:hover,
	&.Btn--hover {
		background-color: #f5f5f5;
		background-image: linear-gradient(#fff,#ededed);
		color: #000;
	}
	&:active,
	&.Btn--active {
		background-color: #c4c4c4;
		background-image: linear-gradient(#b3b3b3,#dbdbdb);
		box-shadow: inset 0 3px 5px rgba(0,0,0,.15);
		color: #686564;
		cursor: default;
	}
}


.Btn--group {
	border-radius: 0;
	
	& + .Btn--group {
		border-left: 0;
	}

	&:first-child {
		border-top-left-radius: btnDefault-bdrad;
		border-bottom-left-radius: btnDefault-bdrad;
	}

	&:last-child {
		border-top-right-radius: btnDefault-bdrad;
		border-bottom-right-radius: btnDefault-bdrad;
	}
}
